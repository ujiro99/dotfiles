"-------------------------------------------------------------------------------
" カラー関連 Colors
"-------------------------------------------------------------------------------

" 256カラー
set t_Co=256

" ハイライト on
syntax enable

" vim-indent-guides
let g:indent_guides_enable_on_vim_startup = 0
let g:indent_guides_guide_size = 1
let g:indent_guides_auto_colors = 1
let g:indent_guides_color_change_percent = 2

" カラースキーム
if has('gui_running') == 0
  colorscheme lucius
  set background=dark
endif
