colorscheme my_color_scheme

if has('win32')
  set guifont=Osaka－等幅:h11:cSHIFTJIS
  set ambiwidth=double
  " DirectWrite を使う
  set renderoptions=type:directx,contrast:1.0,renmode:5
else
  set guifont=Osaka-Mono:h13
endif

" 行間
:set lsp=5

" 高さ
:set lines=999

if has("mac")
    " 自動的に日本語入力(IM)をオンにする
    set noimdisableactivate
endif
