set tabstop    = 2       " tab size   = 2
set shiftwidth = 2       " soft space = 2
set expandtab            " expand tabs
set history    = 50      " keep track of last commands
set ignorecase
set smartcase

set clipboard += unnamed " Yanks go on clipboard instead.
set incsearch            " incremental searching on
set hlsearch             " highlight all matches

set number               " 行番号表示"


" 見た目で行移動
nnoremap j jzz
nnoremap k kzz

" もう一度やる
nnoremap U <C-y>

" 行末へ移動
nnoremap - $
" ビジュアルモード時-で行末まで選択
vnoremap - $hl

" 対応する括弧に移動
nnoremap [ %
nnoremap ] %

" マッチ文字列が画面の真ん中にくるようにする
nmap n nzz
nmap N Nzz
nmap * *zz
nmap # #zz
nmap g* g*zz
nmap g# g#zz

" insert mode でesc
inoremap jj <Esc>
inoremap kk <Esc>
