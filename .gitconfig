[include]
    path = ~/.gitconfig.local
[gui]
    encoding = utf-8
    fontdiff = -family Osaka-Mono -size 10 -weight normal -slant roman -underline 0 -overstrike 0
[core]
    excludesfile = ~/.gitignore
    safeCRLF = true
    autoCRLF = false
    quotepath = true
    editor = nvim
[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto
[alias]
    st = status
    sh = show
    so = remote show origin
    ft = fetch
    ftp = fetch --prune
    up = pull --rebase       # pull rebase
    po = push origin         # push origin
    pof = push -f origin     # force
    pu = push -u origin      # push origin and set upstream
    a = add
    ap = add -p
    c = commit
    cm = commit -m
    ci = commit -a           # modifiedなファイルを全てstageへ
    ca = commit --amend      # 直前のcommitを修正
    co = checkout
    cb = checkout -b         # branch切ってcheckoutする
    ct = checkout --track    # remoteのbranchを追跡
    # branch関連
    br = branch
    ba = branch -a           # originも含めた全てのbranchを表示
    bo = branch -r           # remote branchを表示
    # log関連
    ls = log --stat          # logに変更されたファイルも一緒に出す
    lp = log -p --color      # diffも一緒に出す
    la = log --pretty=format:\"%C(yellow)%h %C(White)%ad | %C(White)%s%C(Green)%d %C(Red)[%an]\" --graph --date=short
    # diff関連
    di = diff --color
    dm = diff master --color   # masterとのdiff
    dw = diff --color-words -b # 単語単位でいろつけてdiff
    dc = diff --color --cached # addされているものとのdiff
    # grep関連
    gr = grep
    gn = grep -n
    sm = submodule
    smupdate = submodule foreach "git checkout master; git pull origin master"
    # stash関連
    sl = stash list
    sp = stash pop
    ss = stash save
[tig "bind"]
    generic = g move-first-line
    generic = G move-last-line
[ghq]
    root = ~/src
[log]
    date = local
[fetch]
    prune = true
